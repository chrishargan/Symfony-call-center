{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/customerStyle.css') }}">{% endblock %}


{% block title %}New Ticket{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    {% block header %}
        <div class="example-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
                <a class="navbar-brand" href="#"><img class="nav-logo" src="{{ asset('img/symfony_black.png') }}"
                                                      alt="Symfony logo"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('homepage') }}">Home <span
                                        class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('customer_home') }}">Your Tickets</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('ticket_new') }}">New Ticket</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    {% endblock %}
    <h1 class="h1 my-5 font-weight-normal text-center">Create new Ticket</h1>
    <div class="card bg-light mb-3 p-2 border border-primary" style="width: 60vw;">
        {{ include('ticket/_form.html.twig') }}
    </div>

    <div>
        <a class="btn btn-primary mt-3 px-5" href="{{ path('customer_home') }}">Back to List</a>
    </div>
{% endblock %}

