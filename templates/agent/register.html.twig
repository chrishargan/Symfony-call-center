{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/customerStyle.css') }}">{% endblock %}
{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
            <a class="navbar-brand" href="{{ path('homepage') }}"><img class="nav-logo" src="/img/symfony_black.png"
                                                                       alt="Symfony logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('homepage') }}">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('manager_dash') }}">Dashboard</a>
                    </li>

                    <li class="nav-item">
                        {% if app.user %}
                            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="h1 my-5 font-weight-normal text-center">Register</h1>
    <div class="card bg-light mb-3 p-2 border border-primary" style="width: 60vw;">
    {{ form_start(agentForm) }}
    {{ form_row(agentForm.email) }}
    {{ form_row(agentForm.plainPassword, {
        label: 'Password'
    }) }}
    {{ form_row(agentForm.isSecondLine) }}

    <button type="submit" class="btn btn-primary w-100">Register</button>
    {{ form_end(agentForm) }}
    </div>
{% endblock %}